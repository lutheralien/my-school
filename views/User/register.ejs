                          <option value="Greater Accra">Greater Accra</option>
                          <option value="North East">North East</option>
                          <option value="Northern">Northern</option>
                          <option value="Oti">Oti</option>
                          <option value="Savannah">Savannah</option>
                          <option value="Upper East">Upper East</option>
                          <option value="Upper West">Upper West</option>
                          <option value="Volta">Volta</option>
                          <option value="Western North">Western Noth</option>
                          <option value="Western">Western</option>
                        </select>
                      </div>
                      <div class="col-md-6 mb-4">
                        <select class="select" name="municipality">
                          <option value="Municipality">Municipality</option>
                          <option value="Asante Akim North">Asante Akim North</option>
                          <option value="Amansie East">Amansie East</option>
                          <option value="Mampong">Mampong</option>
                          <option value="Offinso">Offinso</option>
                          <option value="Asunafo North">Asunafo North</option>
                          <option value="Berekum">Berekum</option>
                          <option value="Dormaa">Dormaa</option>
                          <option value="Kintampo North">Kintampo North</option>
                          <option value="Sunyani">Sunyani</option>
                          <option value="Techimani">Techimani</option>
                          <option value="Wenchi">Wenchi</option>
                          <option value="Agona West">Agona West</option>
                          <option value="Assin North">Assin North</option>
                          <option value="Effutu">Effutu</option>
                          <option value="Komenda/Edina/Eguafo/Abirem">Komenda/Edina/Eguafo/Abirem</option>
                          <option value="Komenda/Eguafo/Abirem">Komenda/Eguafo/Abirem</option>
                          <option value="Mfatseman">Mfatseman</option>
                          <option value="Upper Dekyira East">Upper Dekyira East</option>
                          <option value="Akuapim South">Akuapim South</option>
                          <option value="Birim Central">Birim Central</option>
                          <option value="East Akim">East Akim</option>
                          <option value="Kwahu West">Kwahu West</option>
                          <option value="New Juaben">New Juaben</option>
                          <option value="West Akim">West Akim</option>
                          <option value="Adenta">Adenta</option>
                          <option value="Ashaiman">Ashaiman</option>
                          <option value="Ga East">Ga East</option>
                          <option value="Ga West">Ga West</option>
                          <option value="Ledzekuku-Krowor">Ledzekuku-Krowor</option>
                          <option value="Weija">Weija</option>
                          <option value="Yendi">Yendi</option>
                          <option value="Bawku">Bawku</option>
                          <option value="Bolgatanga">Bolgatanga</option>
                          <option value="Wa">Wa</option>
                          <option value="Ho">Ho</option>
                          <option value="Hohoe">Hohoe</option>
                          <option value="Keta">Keta</option>
                          <option value="Nzema East">Nzema East</option>
                          <option value="Tarkwa Nsuaem">Tarkwa Nsuaem</option>
                          
                         
                        </select>
                      </div>
                      <div class="col-md-6 mb-4">
                        <select class="select" name="city" required>
                          <option value="City/Town">City/Town</option>
                          <option value="Accra">Accra</option>
                          <option value="Kumasi">Kumasi</option>
                          <option value="Tamale">Tamale</option>
                          <option value="Sekondi">Sekondi</option>
                          <option value="Obuase">Obuase</option>
                          <option value="Tema">Tema</option>
                          <option value="Cape Coast">Cape Coast</option>
                          <option value="Koforidua">Koforidua</option>
                          <option value="Ho">Ho</option>

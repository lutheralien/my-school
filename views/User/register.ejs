      crossorigin="anonymous"
    />
    <style>
      .card-registration .select-input.form-control[readonly]:not([disabled]) {
        font-size: 1rem;
        line-height: 2.15;
        padding-left: 0.75em;
        padding-right: 0.75em;
      }
      .card-registration .select-arrow {
        top: 13px;
      }
       select {
        appearance: none;
        outline: 0;
        background: rgb(67, 200, 67);
        background-image: none;
        width: 100%;
        height: 100%;
        color: black;
        cursor: pointer;
        border: 1px solid black;
        border-radius: 10px;
        margin: 10px;
    }
    
     
   
    </style>
     <a href='../User/login'><button style="background-color: rgb(54, 54, 193); padding:10px; border:none;border-radius:10px; color:white; box-shadow: 5px 10px; ">Back To Login</button></a>
    <title>School Admin - Register</title>
  </head>
  <body>
 
    <section class="h-100 bg-dark">
      <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col">
            <div class="card card-registration my-4">
              <div class="row g-0">
                <div class="col-xl-6 d-none d-xl-block">
                  <img
                    src="../../img/register-img.jpg"
                    alt="Sample photo"
                    class="img-fluid"
                    style="
                      border-top-left-radius: 0.25rem;
                      border-bottom-left-radius: 0.25rem;
                    "
                  />
                </div>
                <div class="col-xl-6">
                  <div class="card-body p-md-5 text-black">
                    <h3 class="mb-5 text-uppercase">
                      School Admin Register Portal
                    </h3>
                  
                    <form action="/user/register" method="POST" id="myform">
                    <div class="row" style="margin-bottom: 20px;">
                      <div class="col-md-6 mb-4">
                        <div class="form-outline">
                          <input
                            type="text"
                            placeholder="My School"
                            id="form3Example1m"
                            class="form-control form-control-lg"
                            name="name"
                            required
                            style="background-color:rgb(24, 255, 193);"
                          />
                          <label class="form-label" for="form3Example1m"
                            >School Name &#42;</label
                          >
                        </div>
                      </div>
                      <div class="col-md-6 mb-4">
                        <div class="form-outline">
                          <input
                            type="text"
                            placeholder="example@email.com"
                            id="form3Example1n"
                            class="form-control form-control-lg"
                            name="email"
                            required
                          />
                          <label class="form-label" for="form3Example1n"
                            >Email &#42;</label
                          >
                        </div>
                      </div>
                    </div>

                    <div class="row" style="margin-bottom: 20px;">
                      <div class="col-md-6 mb-4">
                        <div class="form-outline">
                          <input
                            type="password"
                            placeholder="Password"
                            id="form3Example1m1"
                            class="form-control form-control-lg"
                            name="password"
                            required
                          />
                          <label class="form-label" for="form3Example1m1"
                            >Password &#42;</label
                          >
                        </div>
                        <input type="checkbox" onclick="myFunction()"> Show Password
                      </div>
                      <div class="col-md-6 mb-4">
                        <div class="form-outline">
                          <input
                            type="password"
                            placeholder="password again"
                            id="form3Example1n1"
                            class="form-control form-control-lg"
                            name="confirmPassword"
                            required
                          />
                          <label class="form-label" for="form3Example1n1"
                            >Password Confirm &#42;</label
                          >
                        </div>
                      </div>
                    </div>

                    <div class="form-outline mb-4">
                      <input
                        type="text"
                        placeholder="0550749847"
                        id="form3Example8"
                        class="form-control form-control-lg"
                        name="mobile_phone"
                        required
                        style="margin-bottom: 10px;"
                      />
                      <label class="form-label" for="form3Example8"
                        >Phone Address &#42;</label
                      >
                    </div>

                   
                    <br>

                    <div class="row" style="margin-top: 20px;">
                      <div class="col-md-6 mb-4 select">
                        <select class="select" name="region" required style="margin-bottom: 10px;">
                          <option>Region</option>
                          <option value="Ahafo">Ahafo</option>

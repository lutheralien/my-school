                          <option value="Sunyani">Sunyani</option>
                          <option value="Bolgatanga">Bolgatanga</option>
                          <option value="Aflao">Aflao</option>
                          <option value="Nkawkaw">Nkawkaw</option>
                          <option value="Hohoe">Hohoe</option>
                          <option value="Winneba">Winneba</option>
                          <option value="Berekum">Berekum</option>
                          <option value="Techiman">Techiman</option>
                          <option value="Sefwi Wiawso">Sefwi Wiawso</option>
                          <option value="Goaso">Goaso</option>
                          <option value="Dambai">Dambai</option>
                          <option value="Nalerigu">Nalerigu</option>
                          <option value="Damongo">Damongo</option>
                          <option value="Kasoa">Kasoa</option>                                               
                          
                         
                        </select>
                      </div>
                    
                    </div>                   
                 

                    <div class="d-flex justify-content-end pt-3" style="margin-bottom: 30px;">
                      <button type="button" class="btn btn-dark btn-lg" id="myform" onclick="reset()">
                        Reset all
                      </button>
                      <button type="submit" class="btn btn-warning btn-lg ms-2">
                        Submit form
                      </button>
                    </div>
                    </form>
                   
                  </div>
                  <%   if(typeof message != "undefined" && message) { %>

                    <div class="mt-5 mb-3">
            
                      <div class="alert alert-warning alert-dismissible fade show" role="alert">
            
                        <strong><%=  message  %></strong>
            
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            
                      </div>
            
                    </div> 
            
                  <% }    %>
                </div>
                
              </div>
            </div>
          </div>
        </div>
      </div>     
     
    </section>
  
<script>
    document.getElementById('myform').reset();   
    function myFunction() {
  var x = document.getElementById("form3Example1m1");
  if (x.type === "password") {
    x.type = "text";
  } else {
    x.type = "password";
  }
}
    
</script>

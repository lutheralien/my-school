      <div id="content-wrapper">
             <!-- /.container-fluid -->
             <%   if(typeof message != "undefined" && message) { %>

                <div class="mt-5 mb-3">
        
                  <div class="alert alert-primary alert-dismissible fade show" role="alert">
        
                    <h2><strong><%=  message  %></strong></h2>
        
                    <button type="button" class="close" data-dismiss="alert">&times;</button>
        
                  </div>
        
                </div> 
        
              <% }    %>
             <div class="container mt-3 w-100">
                <div class="card shadow-sm w-100">
                  <div class="card-header d-flex justify-content-between">
            
                    
                   

                    <form method="post" action="/user/school-update-advanced-info">
                        <div class="form-group has-success">
                        <label for="school-website"><h2>School Website Address</h2></label>
                        <input type="url" class="form-control" id="school-website" placeholder="www.example-school.com.gh" name="school_website">
                        </div>
                        <br>
                        <div class="form-group has-success">
                          <label for="address"><h2>School Address</h2></label>
                          <input type="text" class="form-control" id="address" placeholder="" name="address">
                          </div>
                          <br>
                          <div class="form-group has-success">
                            <label for="a-number"><h2>School Alternative Phone</h2></label>
                            <input type="number" class="form-control" id="a-number" placeholder="0559684735" name="mobile_phone_a">
                            </div>
                            <br>
                        <div class="form-group has-warning">
                        <label for="google-map"><h2>Google Map Location</h2></label>
                        <input type="text" class="form-control" id="google-map" placeholder="" name="google_map_location">
                        </div> 
                        <br>
                        <div class="form-group has-error">
                        <label for="ghanapost"><h2>Ghana Post Address</h2></label>
                        <input type="text" class="form-control" id="ghanapost" placeholder="" name="ghanapost_address">
                        </div>
                        <br> 
                        <div class="form-group has-error">
                        <label for="landmark"><h2>Landmark</h2></label>
                        <input type="text" class="form-control" id="landmark" placeholder="" name="landmark">
                        </div> 
                        <br>
                        <div class="form-group">
                          <label for="subjects"><h2>Subjects Offered In School</h2></label>
                          <textarea class="form-control" id="subjects" rows="5" name="subjects_offered"></textarea>
                          </div>
                        <br>
                        <div class="form-group">
                          <label for="courses"><h2>Courses/Programmes Offered In School</h2></label>
                          <textarea class="form-control" id="courses" rows="5" name="courses_offered"></textarea>
                          </div>
                          <br>
                        <div class="form-group">
                          <label for="feespaid"><h2>Information About Fees Paid and Method of Payment</h2></label>
                          <textarea class="form-control" id="feespaid" rows="5" name="fee_info"></textarea>
                          </div>
                          <br>               
                       
                        <button type="submit" class="btn btn-info">Submit Information</button>
                        </form>
                   
                  </div>
                 
                </div>
              </div>


             

              
              
        </div>
        <!-- Sticky Footer -->
        <footer class="sticky-footer">
          <div class="container my-auto">
            <div class="copyright text-center my-auto">
              <span>Copyright Â© My School 2022</span>
            </div>
          </div>
        </footer>

      </div>
      <!-- /.content-wrapper -->

    </div>
